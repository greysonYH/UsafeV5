<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/unit_spacing">

    <com.example.greyson.test1.widget.RobotoTextView android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:textColor="@color/material_deep_teal_50"
        font:typeface="roboto_thin"/>

    <com.example.greyson.test1.widget.RobotoTextView android:id="@+id/hours_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="h"
        android:textColor="@color/material_deep_teal_50"
        android:textAppearance="?android:textAppearanceMedium"
        font:typeface="roboto_thin"/>

</LinearLayout>